@model IEnumerable<Kullanici>

<br />
<br />
<br />
<br />
<br />

<a class="btn btn-primary" asp-action="Create">Kullanıcı Ekle</a>
   <table class="table table-sm table-bordered">
       <thead>
           <tr>
             <th>Id :</th>
            <th>Adı :</th>
            <th>Email :</th>
            <th style="width: 125px"></th>
           </tr>
       </thead>
       <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Kullanıcı yok</td></tr>
        }
           @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Düzenle</a>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Bu Kullanıcıyı silmek istediğinize emin misiniz?')" class="delete-form">
                            <input type="hidden" value="@user.Id" name="id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>


                </td>
            </tr>
        }
    </tbody>
   </table>
