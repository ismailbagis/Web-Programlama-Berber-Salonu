<h2>Hair Changer</h2>

<form action="/HairChanger/ChangeHair" method="post" enctype="multipart/form-data">
    <div>
        <label for="hairColor">Saç Rengi:</label>
        <input type="text" id="hairColor" name="hairColor" required />
    </div>
    <div>
        <label for="imageFile">Görüntü Yükleyin:</label>
        <input type="file" id="imageFile" name="imageFile" required />
    </div>
    <button type="submit">Saç Rengini Değiştir</button>
</form>

@if (ViewBag.Result != null)
{
    <div>
        <h3>Sonuç:</h3>
        <img src="@ViewBag.Result" alt="Değiştirilmiş Görüntü" />
    </div>
}

@if (ViewBag.Error != null)
{
    <div style="color: red;">
        <p>@ViewBag.Error</p>
    </div>
}
