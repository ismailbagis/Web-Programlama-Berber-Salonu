<h2>Randevu Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="HizmetId">Hizmet</label>
        <select asp-for="HizmetId" asp-items="@(new SelectList(ViewData["Hizmetler"] as List<Eci_website.Models.Hizmet>, "Id", "Ad", Model.HizmetId))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <select asp-for="CalisanId" asp-items="@(new SelectList(ViewData["Calisanlar"] as List<Eci_website.Models.Calisan>, "Id", "AdSoyad", Model.CalisanId))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="RandevuTarihi">Randevu Tarihi</label>
        <input asp-for="RandevuTarihi" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Randevularim" class="btn btn-secondary">İptal</a>
</form>
