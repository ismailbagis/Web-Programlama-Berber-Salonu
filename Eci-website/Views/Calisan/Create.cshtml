@model Calisan

<h2>Calisan Ekle</h2>
<hr>
<form asp-controller="Calisan" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Çalışan Adı :</label>
        <input asp-for="Ad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Soyad" class="form-label">Soyad :</label>
        <input asp-for="Soyad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon Numarası :</label>
        <input asp-for="Telefon" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="UzmanlikAlani" class="form-label">Uzmanlık Alanı :</label>
        <input asp-for="UzmanlikAlani" class="form-control">
    </div>
        <div class="mb-3">
        <label asp-for="Uygunluk" class="form-label">Uygunluk :</label>
        <input asp-for="Uygunluk" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="SalonId" class="form-label">Çalışacağı Salon :</label>
        <input asp-for="SalonId" class="form-control">
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>