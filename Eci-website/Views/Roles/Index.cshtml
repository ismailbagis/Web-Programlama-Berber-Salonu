@model IEnumerable<Rol>

<br />
<br />
<br />
<br />
<br />

<a class="btn btn-primary" asp-action="Create">Rol Ekle</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Id :</th>
        <th>Rol Adı :</th>
        <th>Kullanıcılar :</th>
        <th>Seçenekler</th>
    </tr>

    @if(Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">Rol yok</td></tr>
    }
    @foreach(var role in Model)
    {
       <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>Kullanıcı Listesi</td>
            <td>
                <form method="post">
                    <a class="btn btn-primary">Düzenle</a>
                    <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                </form>
            </td>
       </tr>
    }
</table>