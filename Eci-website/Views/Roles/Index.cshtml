@model Eci_website.ViewModel.RolViewModel


<br />
<br />
<br />
<br />
<br />


<table class="table table-sm table-bordered">
    <tr>
        <th>Id :</th>
        <th>Rol Adı :</th>
        <th>Kullanıcılar :</th>
    </tr>
    @if (!Model.Roles.Any())
    {
        <tr><td colspan="4" class="text-center">Rol yok</td></tr>
    }

    @foreach (var role in Model.Roles)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <a class="btn btn-link" asp-action="UserInRole" asp-route-roleId="@role.Id">Kullanıcıları Gör</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">Düzenle</a>
            </td>
        </tr>
    }


</table>
