<h2>Hizmet Ekle</h2>
<hr>
<form asp-controller="Hizmet" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Hizmet Adı :</label>
        <input asp-for="Ad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label">Açıklama :</label>
        <input asp-for="Aciklama" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Ucret" class="form-label">Ücret :</label>
        <input asp-for="Ucret" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Sure" class="form-label">Süre :</label>
        <input asp-for="Sure" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="SalonId" class="form-label">Çalışacağı Salon :</label>
        <select asp-for="SalonId" asp-items="ViewBag.Salonlar" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>