<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="ECİ Berber Web Sitesi">
    <meta name="author" content="ECİ Berber">
    <title>@ViewData["Title"] - ECİ Berber</title>

    <!-- Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body id="page-top">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#page-top">
                <img style="width:150px; height: 150px;border-radius: 20px" src="~/img/logoeci.jpg" alt="ECİ BERBER Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Home">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Hizmet">Hizmetler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Salon">Salonlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Calisan">Çalışanlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Randevu/RandevuAl">Randevu Al</a></li>
                    <li class="nav-item"><a class="nav-link" href="#footer">İletişim</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Hair/Index">Saç Öneri Al</a></li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        if(User.IsInRole("admin"))
                        {

                            <li class="nav-item"><a class="nav-link" href="/Users/Index">Kullanıcılar</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Roles/Index">Roller</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/Randevular">Randevular</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Admin/Kazanc">Kazanç</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Randevu/Randevularim">Randevularım</a></li>
                        }

                        if (User.IsInRole("kullanici"))
                        {

                            <li class="nav-item"><a class="nav-link" href="/Randevu/Randevularim">Randevularım</a></li>
                        }



                    }

                    @if(User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item"><a class="nav-link">Merhaba, @User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Çıkış Yap</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Giriş</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Kayıt Ol</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5 pt-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer id="footer" style="background-color: #222; color: #fff; padding: 20px 0; text-align: center;">
        <div style="display: flex; justify-content: space-around; flex-wrap: wrap; max-width: 1200px; margin: 0 auto; gap: 20px;">
            <!-- Telif Hakkı -->
            <div>
                <p>&copy; @DateTime.Now.Year ECİ BERBER | Tüm Hakları Saklıdır</p>
            </div>

            <!-- İletişim Bilgileri -->
            <div>
                <h4 style="margin-bottom: 10px;">İletişim</h4>
                <p>Adres: Şehitler Cad. No:34, İstanbul</p>
                <p>
                    Telefon: <a href="tel:+905551234567" style="color: #fff; text-decoration: none;">+90 555 123 45 67</a>
                </p>
                <p>
                    E-posta: <a href="mailto:info@eciberber.com" style="color: #fff; text-decoration: none;">info@eciberber.com</a>
                </p>
            </div>

            <!-- Sosyal Medya -->
            <div>
                <h4 style="margin-bottom: 10px;">Bizi Takip Edin</h4>
                <ul style="list-style: none; display: flex; gap: 15px; padding: 0; justify-content: center;">
                    <li>
                        <a href="https://facebook.com/eci.berber" target="_blank" style="color: #fff;">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/eci_berber" target="_blank" style="color: #fff;">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://instagram.com/eci.berber" target="_blank" style="color: #fff;">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://linkedin.com/in/eci.berber" target="_blank" style="color: #fff;">
                            <i class="fab fa-linkedin fa-lg"></i>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Hızlı Erişim -->
            <div>
                <h4 style="margin-bottom: 10px;">Hızlı Erişim</h4>
                <ul style="list-style: none; padding: 0; text-align: left;">
                    <li><a href="/hakkimizda" style="color: #fff; text-decoration: none;">Hakkımızda</a></li>
                    <li><a href="/hizmetler" style="color: #fff; text-decoration: none;">Hizmetlerimiz</a></li>
                    <li><a href="/iletisim" style="color: #fff; text-decoration: none;">İletişim</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="~/js/site.js"></script>

    <!-- Render 'Scripts' section -->
    @RenderSection("Scripts", required: false)
</body>
</html>
